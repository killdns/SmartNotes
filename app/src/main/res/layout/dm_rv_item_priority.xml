<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dm_cv_priority_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="1px"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/colorLightGrey"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="10dp"
    card_view:contentPadding="7dp"
    card_view:contentPaddingBottom="0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dm_priority_item_preview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="0"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:text="Т"
            android:textAlignment="center"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/dm_priority_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="По умолчанию"
            android:textColor="@color/cardview_dark_background"
            android:textSize="11sp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="60dp" />

    </LinearLayout>
</android.support.v7.widget.CardView>